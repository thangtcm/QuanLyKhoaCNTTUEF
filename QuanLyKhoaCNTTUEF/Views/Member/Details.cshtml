@model QuanLyKhoaCNTTUEF.Models.TaskAssignments

@{
    ViewData["Title"] = "Chi tiết tiến độ nhiệm vụ của";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="content container-fluid">
            <div class="page-header">
                <div class="row align-items-center">
                    <div class="col">
                        <div class="mt-5">
                            <h4 class="card-title float-left mt-2">@ViewData["Title"] @Html.DisplayFor(model => model.MembersGroups!.ApplicationUser!.FullName)</h4>
                            <a asp-controller="Group" asp-action="Details" asp-route-id="@Model.MembersGroups!.GroupID" class="btn btn-primary float-right veiwbutton">Quay về</a>
                        </div>
                    </div>
                </div>
            </div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MembersGroups)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.MembersGroups!.MemberGroupID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Tasks!.TaskName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Tasks!.TaskName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.StartTime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.StartTime)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EndTime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EndTime)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Progress)
                </dt>
                <dd class="col-sm-10">
                    <span class="number form-control col-sm-1">@Html.DisplayFor(model => model.Progress)</span>
                    <input type="range" id="Progress"  value="@Html.DisplayFor(model => model.Progress)" disabled/>
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Note)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Note)
                </dd>
            </dl>
        </div>
    </div>
</div>
