                            </div>
                            <div class="form-group">
                                <label asp-for="NgayBD" class="control-label"></label>
                                <input asp-for="NgayBD" class="form-control" />
                                <span asp-validation-for="NgayBD" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NgayKT" class="control-label"></label>
                                <input asp-for="NgayKT" class="form-control" />
                                <span asp-validation-for="NgayKT" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MoTa" class="control-label"></label>
                                <input asp-for="MoTa" class="form-control" />
                                <span asp-validation-for="MoTa" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <div class="col-md-8">
        <a asp-action="Index">Back to List</a>
    </div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
