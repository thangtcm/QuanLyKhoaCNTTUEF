            <td>
                @Html.DisplayFor(modelItem => item.XoaTam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDNguoiTao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayTao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDNguoiCapNhat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayCapNhat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDNguoiXoa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayXoa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EventID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EventID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EventID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
