@page
@model LoginModel

@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>ĐĂNG NHẬP - HỆ THỐNG QUẢN LÝ KHOA</title>
    <meta content="HỆ THỐNG QUẢN LÝ KHOA - UEF" name="description">
    <meta content="Trường đào tạo hàng đầu về Kinh tế Tài chính ở Việt Nam, chuẩn Quốc tế, đảm bảo thực tập, việc làm tại các tập đoàn lớn. " name="keywords">
    <meta name="description" content="Trường đào tạo hàng đầu về Kinh tế Tài chính ở Việt Nam, chuẩn Quốc tế, đảm bảo thực tập, việc làm tại các tập đoàn lớn.">
    <meta name="author" content="YanDev">
    <meta name="robots" content="all">
    <link href="~/img/logo_small.png" rel="icon">
    <link href="~/img/logo_small.png" rel="apple-touch-icon">
    <!-- Open Graph Meta -->
    <meta property="og:title" content="Trường đào tạo hàng đầu về Kinh tế Tài chính ở Việt Nam, chuẩn Quốc tế, đảm bảo thực tập, việc làm tại các tập đoàn lớn.">
    <meta property="og:site_name" content="HỆ THỐNG QUẢN LÝ KHOA">
    <meta property="og:description" content="Trường đào tạo hàng đầu về Kinh tế Tài chính ở Việt Nam, chuẩn Quốc tế, đảm bảo thực tập, việc làm tại các tập đoàn lớn.">
    <meta property="og:type" content="website">
    <meta property="og:url" content="/">
    <meta property="og:image" content="https://user-cdn.uef.edu.vn/img/slider/bannerhuongnghiep-final-2023-1665029440.jpg">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,500;0,600;0,700;1,400&display=swap">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/plugins/fontawesome/css/all.min.css" rel="stylesheet" />
    <link href="~/plugins/fontawesome/css/fontawesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/plugins/datatables/datatables.min.css">
    <link href="~/css/feathericon.min.css" rel="stylesheet" />
    <link href="~/plugins/morris/morris.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/plugins/select2/css/select2.min.css">

</head>
<body>

    <div class="main-wrapper login-body">
        <div class="login-wrapper">
            <div class="container">
                <div class="loginbox">
                    <div class="login-left">
                        <img class="img-fluid" src="~/img/logo.png" alt="Logo">
                    </div>
                    <div class="login-right">
                        <div class="login-right-wrap">
                            <h1>Login</h1>
                            <p class="account-subtitle">Access to our dashboard</p>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <form id="account" method="post">
                                <div class="form-group">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                    <label asp-for="Input.Email" class="form-label"></label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                    <label asp-for="Input.Password" class="form-label"></label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="checkbox">
                                        <label asp-for="Input.RememberMe" class="form-label">
                                            <input class="form-check-input" asp-for="Input.RememberMe" />
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                                </div>
                            </form>

                            <div class="text-center forgotpass">
                                <a href="forgot-password.html">Forgot Password?</a>
                            </div>
                            <div class="login-or">
                                <span class="or-line"></span>
                                <span class="span-or">or</span>
                            </div>

                            <!--<div class="social-login">
                                <span>Login with</span>
                                <a href="#" class="google"><i class="fab fa-google"></i></a>
                            </div>-->
                            <div class="social-login">
                                @{
                                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                                    {
                                        <div>
                                            <span>Hệ thống Đăng Nhập Bằng Google Đang Bảo Trì</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="social-login">
                                            <span>Login with</span>
                                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                                <div>
                                                    <p>
                                                        @{
                                                            if (Model.ExternalLogins is not null)
                                                            {
                                                                @foreach (var provider in Model.ExternalLogins)
                                                                {
                                                                    <button type="submit" class="btn btn-danger google" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><i class="fab fa-google"></i> @provider.DisplayName</button>
                                                                }
                                                            }
                                                        }

                                                    </p>
                                                </div>
                                            </form>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>

